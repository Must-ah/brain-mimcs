{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "StreamSessionResponse.schema.json",
  "title": "StreamSessionResponse",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "meta": {
      "allOf": [
        {
          "$ref": "meta.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "schema_version": {
              "const": "v1"
            },
            "contract": {
              "const": "StreamSessionResponse"
            },
            "message_type": {
              "const": "StreamSessionResponse"
            },
            "origin_plane": {
              "enum": [
                "gateway"
              ]
            }
          },
          "required": [
            "schema_version",
            "contract",
            "message_type"
          ]
        }
      ]
    },
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "ok",
            "denied"
          ]
        },
        "reason": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "unauthorized",
            "forbidden",
            "not_found",
            "expired",
            "rate_limited",
            null
          ]
        },
        "session_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "expires_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "offer_uri": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "webrtc": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true,
          "properties": {
            "offer_sdp": {
              "type": "string"
            },
            "ice_servers": {
              "type": "array",
              "items": {
                "type": "object"
              },
              "minItems": 0
            }
          }
        }
      },
      "required": [
        "status"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "status": {
                "const": "ok"
              }
            }
          },
          "then": {
            "anyOf": [
              {
                "required": [
                  "session_id",
                  "expires_at",
                  "webrtc"
                ]
              },
              {
                "required": [
                  "session_id",
                  "expires_at",
                  "offer_uri"
                ]
              }
            ]
          }
        }
      ]
    }
  },
  "required": [
    "meta",
    "payload"
  ]
}
